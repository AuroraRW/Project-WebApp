<%- include("partials/header") %>
<div class="container">
    <div style="width: 50%; margin: 25px auto;">
        <h1 >New Blog</h1>
        <form  role="form" action="/blogs" method="POST">
            <div class="form-group">
                <label for="titleID">Title</label>
                <input class="form-control" type="text" name="blog[title]" id="titleID" placeholder="title">
            </div>
            <div class="form-group">
                <label for="imageID">Image</label>
                <input class="form-control" type="text" name="blog[image]" id="imageID"placeholder="image">
            </div>
            <div class="form-group">
                <label for="contentID">Blog Content</label>
                <textarea class="form-control" cols="30" rows="10" name="blog[body]" id="contentID" placeholder="blog post goes here"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Submit</button>
            </div>    
        </form>
    </div>
</div>
<%- include("partials/footer") %>

<%- include("partials/header") %>
<div class="container" style="border: 2px solid rgba(145, 143, 143, 0.479);border-radius: 15px;margin: 25px auto;">
    <h1><%=blog.title%></h1>
    <img src="<%= blog.image%>" style="width:500px;height:500px;" >
    <p><%= blog.created.toDateString()%></p>
    <p><%- blog.body%></p>  <!-- could run html code-->
    <div class="form-group">
        <a href="/blogs/<%= blog._id%>/edit" class="btn btn-warning">Edit</a>
    </div>
    <div class="form-group">
        <form action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
    
</div>
<%- include("partials/footer") %>
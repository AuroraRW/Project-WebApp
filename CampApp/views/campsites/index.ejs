<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome</h1>
            <p>View the campsites from all of the world</p>
            <a class="btn btn-primary btn-large" href="/campsites/new">Add New Campsite</a>
        </div>
    </header>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campsites.forEach(function(site){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=<%= site["image"]%>>
                    <div class="caption">
                        <h4><%= site["name"]%></h4>
                    </div>
                    <P>
                        <a href="/campsites/<%= site._id %>" class="btn btn-primary">More Info</a>
                    </P>
                </div>
            </div>
        <%})%>
    </div>
</div>


<%- include("../partials/footer") %>